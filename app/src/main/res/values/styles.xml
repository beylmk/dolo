<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:toolbarStyle">@style/AppTheme.ToolbarStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ToolbarStyle" parent="@android:style/Widget.Toolbar">
        <item name="android:titleTextAppearance">@style/AppTheme.ToolbarStyle.TitleTextStyle</item>
    </style>

    <style name="AppTheme.ToolbarStyle.TitleTextStyle" parent="@android:style/TextAppearance.Material.Widget.Toolbar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
